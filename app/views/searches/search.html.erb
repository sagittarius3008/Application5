<% if @model == "user" %>
<div class="row  justify-content-center">
  <h2>ユーザー 一覧</h2>
</div>
<div class="row  justify-content-center">
  <% @datas.each do |datas| %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ユーザー名</th>
      </tr>
     </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to datas.name, user_path(datas.id) %>
        </td>
      </tr>
    </tbody>
    </table>
    <% end %>
</div>

<% elsif @model == "book"%>
<h3>Books search for "test"</h3>
<div class="row  justify-content-center">
<% @datas.each do |datas| %>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
       </thead>
    <tbody>
        <tr>
          <td>
            <%= attachment_image_tag(datas.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          </td>
          <td>
              <%= link_to datas.title, book_path(datas.id) %>
          </td>
          <td>
              <%= datas.body %>
          </td>
        </tr>
    </tbody>
    </table>
    <% end %>
</div>


<% else %>

<% end %>